<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DempApp1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.filled" parent="">
        <item name="colorControlActivated">@android:color/holo_red_light</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@color/blue_700</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue_700</item>
    </style>

</resources>